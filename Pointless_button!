import tkinter

window = tkinter.Tk()
window.title("POINTLESS BUTTON")

top_frame = tkinter.Frame(window).pack()
bottom_frame = tkinter.Frame(window).pack(side = "bottom")

PntlsBtn = tkinter.Button(top_frame, text = "WARNING!\nPOINTLESS!", fg = "white", bg = "red").pack()


from tkinter import*
top = tkinter.Tk()
CheckVar1 = IntVar()
CheckVar2 = IntVar()
tkinter.Checkbutton(top, text = "Pointless",variable = CheckVar1,onvalue = 1, offvalue=0).grid(row=0,sticky=W)
tkinter.Checkbutton(top, text = "Also Pointless", variable = CheckVar2, onvalue = 0, offvalue =1).grid(row=1,sticky=W)
top.mainloop()
window.mainloop()
